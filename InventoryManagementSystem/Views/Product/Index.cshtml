@model IEnumerable<InventoryManagementSystem.Models.Product>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Products</h2>
    <div>
        <a class="btn btn-success" asp-action="ExportExcel">Export Excel</a>
        <a class="btn btn-warning" asp-action="ExportCSV">Export CSV</a>
        <a class="btn btn-primary" asp-action="Create">Add Product</a>
    </div>
</div>

<form method="get" asp-action="Index" class="mb-3">
    <input type="text" name="search" value="@ViewBag.Search" placeholder="Search products..." class="form-control w-25 d-inline-block" />
    <button type="submit" class="btn btn-secondary">Search</button>
</form>

<h5 class="text-primary">Total Inventory Value: ₹@ViewBag.TotalInventoryValue</h5>

<table class="table table-bordered table-striped mt-3">
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.CategoryName</td>
                <td>@item.SupplierName</td>
                <td>@item.Price</td>
                <td>@item.QuantityInStock</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.ProductID">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
