@model InventoryManagementSystem.Models.Product
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductID" />
    <div class="mb-3">
        <label>Name</label>
        <input asp-for="ProductName" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Category</label>
        <select asp-for="CategoryID" class="form-control" asp-items="@(new SelectList(ViewBag.Categories, "CategoryID", "CategoryName"))"></select>
    </div>
    <div class="mb-3">
        <label>Supplier</label>
        <select asp-for="SupplierID" class="form-control" asp-items="@(new SelectList(ViewBag.Suppliers, "SupplierID", "SupplierName"))"></select>
    </div>
    <div class="mb-3">
        <label>Price</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Quantity</label>
        <input asp-for="QuantityInStock" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update Product</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
